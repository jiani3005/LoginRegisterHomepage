<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#C8E6C9"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/gallery_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:text="Title"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/gallery_description"
            android:layout_below="@id/gallery_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/gallery_image"
            android:layout_below="@id/gallery_description"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/gallery_price"
            android:textSize="20sp"
            android:text="Price"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/gallery_image"/>

        <TextView
            android:id="@+id/gallery_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="Rating"
            android:padding="5dp"
            android:background="#FFEB3B"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/gallery_image"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</ScrollView>

